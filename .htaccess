# Redirect ke folder public jika document root tidak bisa diubah
# Hapus file ini jika document root sudah mengarah ke folder public

<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # Redirect semua request ke folder public
    RewriteCond %{REQUEST_URI} !^/public/
    RewriteRule ^(.*)$ public/$1 [L]
</IfModule>

