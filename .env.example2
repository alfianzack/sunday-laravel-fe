APP_NAME="Sunday Learn"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_TIMEZONE=UTC
APP_URL=http://localhost:8000
APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en
APP_MAINTENANCE_DRIVER=file
APP_MAINTENANCE_STORE=database

# ============================================
# Session & Cache Configuration
# ============================================
# Menggunakan file-based session dan cache
# TIDAK PERLU DATABASE untuk konfigurasi ini
SESSION_DRIVER=file
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null
SESSION_SECURE_COOKIE=null
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=lax
SESSION_PARTITIONED_COOKIE=false

# Cache Configuration - File-based (tidak perlu database)
CACHE_STORE=file
CACHE_PREFIX=

# Queue Configuration
QUEUE_CONNECTION=sync

# ============================================
# Database Configuration (TIDAK DIPERLUKAN)
# ============================================
# Aplikasi ini hanya menyimpan session token sementara
# Semua data (users, courses, cart, orders) berasal dari backend API
# Tidak perlu konfigurasi database sama sekali
# DB_CONNECTION=sqlite

# ============================================
# API Configuration
# ============================================
# URL backend API yang menyediakan semua data
API_URL=http://localhost:5000/api

# ============================================
# Broadcasting (Optional)
# ============================================
BROADCAST_CONNECTION=log

# ============================================
# Mail Configuration (Optional)
# ============================================
MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME=""

# ============================================
# AWS Configuration (Optional)
# ============================================
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# ============================================
# Vite Configuration
# ============================================
VITE_APP_NAME=""